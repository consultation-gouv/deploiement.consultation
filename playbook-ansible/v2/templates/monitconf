#FAIL2BAN
check process fail2ban with pidfile /var/run/fail2ban/fail2ban.pid
start program = "/bin/systemctl start fail2ban"
stop program = "/bin/systemctl stop fail2ban "
restart program = "/bin/systemctl restart fail2ban"
